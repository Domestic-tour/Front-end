<link rel="stylesheet" href="/css/dashboard.css">
<div class="dashboad__header">
    <h3 class="dashboad__heading">Hi, Welcome back</h3>
    <div style="position: relative;">
        <div class="dashboad__search">
            <input type="text" class="dashboad__search-input" placeholder="Search...">
            <div class="dashboad__search-icon">
                <i class="fas fa-search"></i>
            </div>
        </div>
        <ul id="overlay-dashboard">
            {{#each tour}}
            <li><a href="/tours/{{this.MaTour}}">{{this.TenTour}}</a></li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="dashboard-container">
    {{#each tour}}
    <div class="container-img-card">
        <a href="/tours/{{this.MaTour}}" class="tag-a-detail-tour">
            <img class="img-headerPosition" src="{{this.AnhDaiDien}}" alt="">
            <div class="overlay-img-headerPosition">
                <p class="overlay-inside-date">{{this.ThoiGianTour}}</p>
                <p class="overlay-inside-title">Tour : {{this.TenTour}} </p>
                <div class="overlay-inside-interaction">
                    <i class="fas fa-comment-dots overlay-inside-interaction-icon"></i>
                    <span class="overlay-inside-interaction-title">120k</span>
                    <i class="fas fa-eye overlay-inside-interaction-icon"></i>
                    <span class="overlay-inside-interaction-title">120k</span>
                    <i class="fas fa-share-alt overlay-inside-interaction-icon"></i>
                    <span class="overlay-inside-interaction-title">120k</span>
                </div>
            </div>
        </a>
    </div>
    {{/each}}
</div>

<script>

    $('.container-item-tag').removeClass('active')
    $('.container-item-tag').eq(0).addClass('active')

    //handle search
    $('.dashboad__search-input').on('keyup', function () {
        let value = $(this).val()
        console.log(value)
        if (value.length > 0) {
            $('#overlay-dashboard').css('display', 'block')
        } else {
            $('#overlay-dashboard').css('display', 'none')
        }
        $('#overlay-dashboard li').each(function () {
            let text = $(this).text()
            if (text.toLowerCase().indexOf(value.toLowerCase()) == -1) {
                $(this).css('display', 'none')
            } else {
                $(this).css('display', 'block')
            }
        })
    })
</script>